<div class="wrapper-header">
  <div class="header">
    <div class="header-content text-center">
    <h1>Store your wine like pros.</h1>
      <p>Find the perfect place to store your wine everywhere.</p>
      <div class="container">
        <%= simple_form_for :search, url: cellars_path, method: :get, :html => { :class => 'form-inline' } do |f| %>
          <%= f.input :space_available, label: false, placeholder: "how much bottles?" %>
          <%= f.button :submit %>
        <% end %>
      </div>

    </div>
  </div>
</div>

<hr>

<div class="wrapper-header">
  <p style="">All the existing caves</p>

  <div id="map" style="width: 100%; height: 400px; margin-bottom: 50px">
    <% content_for(:after_js) do %>
      <script>
        $(document).on('ready', function() {

          var handler = Gmaps.build('Google');
          handler.buildMap({ provider: { scrollwheel: false, zoomcontrol: true, draggable: true },internal: { id: 'map' } }, function() {
              markers = handler.addMarkers(<%= raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
          });
        });
      </script>
    <% end %>
  </div>
</div>
