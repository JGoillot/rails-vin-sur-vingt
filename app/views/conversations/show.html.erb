<p>Page show</p>
<%= link_to "View all my messages", conversations_path %>

<% @messages.each do |message| %>

  <p>
    <h4><%= message.user.first_name %> <%= message.user.last_name %></h4>
    <i><%= "it's me" if message.user == current_user %></i><br>
    <%= message.content %>
  </p>
<% end %>

<div class="reply-box">
  <%= simple_form_for [@conversation, @message] do |f| %>
    <%= f.input :content %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
</div>
