Page show
<%= link_to "View all my messages", conversations_path %>

<blockquote class="chat">
<% @messages.each do |message| %>
<div class="iphone <%=  message.user == current_user ? "me" : "them" %>">
    <strong><%= message.user.first_name %> <%= message.user.last_name %> :</strong><br>
 <%= message.content %>
</div>


<% end %>


<div class="reply-box">
  <%= simple_form_for [@conversation, @message] do |f| %>
    <%= f.input :content, label: false %>
    <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
</div>

</blockquote>
