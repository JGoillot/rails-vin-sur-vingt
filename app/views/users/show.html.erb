<div class="banner" style="background-image: linear-gradient(-225deg, rgba(235,51,73,0.6) 0%, rgba(244,92,67,0.6) 50%), url('<%= image_path "cellar_background.jpg" %>');">
 <div class="profil-user">
  <div class="image-user">
    <%= image_tag "http://placehold.it/150x150" %>
  </div>
  <div class="text-user">
    <h1>Hello, my name is <%= @user.first_name %></h1>
      <h5><strong><%= @user.first_name %> <%= @user.last_name %></strong> · Member since <strong><%= @user.created_at.strftime("%B %Y") %></strong></h5>
  </div>
</div>

</div>



<div class="container">
<h1 class="text-center"><%= @user.first_name %> | Cellars' List</h1>
<div class="row">
      <% @cellars.each do |c| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path "wine_cellar.jpg" %>');">
          <div class="card-category"><%= c.kind %></div>
            <div class="card-description">
              <h2><%= c.user.first_name %>'s Cellar</h2>
              <p><%= c.address %> </p>
            </div>
          <div class="card-user">
            <%= c.price_per_month %> €
          <%= link_to "", cellar_path(c), class: "card-link" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<hr>
